<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Previous Icon (Left Side with less opacity) -->
    <ImageView
        android:id="@+id/icon_previous"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:alpha="0.3"
        android:visibility="invisible"
        android:src="@drawable/icon_settings" />

    <!-- Current Icon (Center with full opacity) -->
    <ImageView
        android:id="@+id/icon_current"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:alpha="1.0"
        android:src="@drawable/icon_describescene" />

    <!-- TextView for Icon Name -->
    <TextView
        android:id="@+id/icon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_current"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Describe Scene" />

    <!-- Next Icon (Right Side with less opacity) -->
    <ImageView
        android:id="@+id/icon_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:alpha="0.3"
        android:src="@drawable/icon_navigate" />

</RelativeLayout>
